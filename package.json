{
  "name": "open-hockey-api",
  "version": "0.0.1",
  "description": "Open Source Hockey GraphQL API for NHL Statistics",
  "author": "Ryan Block",
  "private": false,
  "license": "ISC",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/main",
    "sdw": "npm run start:dev:watch",
    "start:dev:watch": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint --fix 'src/**/*.ts'",
    "lint:probe": "eslint --fix-dry-run 'src/**/*.ts'",
    "postinstall": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "sourcemaps:publish": "npm run build && npm run sourcemaps:push && npm run sourcemaps:finalize",
    "sourcemaps:push": "sentry-cli releases --org getlevvel --project open-hockey-api files \"$npm_package_name-$npm_package_version\" upload-sourcemaps --ext ts --ext map --ext js ./dist/ --rewrite",
    "sourcemaps:finalize": "sentry-cli releases --org getlevvel --project open-hockey-api finalize \"$npm_package_name-$npm_package_version\""
  },
  "dependencies": {
    "@nestjs/common": "^7.5.4",
    "@nestjs/config": "^0.6.1",
    "@nestjs/core": "^7.5.4",
    "@nestjs/graphql": "^7.8.2",
    "@nestjs/platform-express": "^7.5.4",
    "@rblock919/nestjs-logger": "^0.0.1",
    "@sentry/integrations": "^5.15.5",
    "@sentry/minimal": "^5.15.4",
    "@sentry/node": "^5.15.4",
    "apollo-datasource-rest": "^0.8.1",
    "apollo-server-cache-redis": "^1.2.2",
    "apollo-server-env": "^2.4.3",
    "apollo-server-errors": "^2.4.1",
    "apollo-server-express": "^2.12.0",
    "graphql": "^15.4.0",
    "graphql-tools": "^5.0.0",
    "loggly": "^1.1.1",
    "node-loggly-bulk": "^2.2.4",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.3",
    "@nestjs/schematics": "^7.2.2",
    "@nestjs/testing": "^7.5.4",
    "@rblock919/eslint-config": "^1.1.10",
    "@sentry/cli": "^1.52.3",
    "@types/express": "^4.17.3",
    "@types/jest": "25.1.4",
    "@types/mongoose": "^5.7.7",
    "@types/node": "^13.9.1",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-import-resolver-typescript": "^2.2.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "25.2.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    },
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": "12.14.1",
    "npm": "6.14.1"
  },
  "engineStrict": true
}
